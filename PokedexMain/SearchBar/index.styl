.root
  align-items: flex-start
  margin-top: 15px
  +desktop()
    margin-top: 25px
    align-items: center


.container
  align-items: flex-start
  +desktop()
    row()

.search
  background-image: url(https://image.flaticon.com/icons/svg/122/122932.svg)
  background-repeat: no-repeat
  background-size: 30px
  background-position: 5px 6px
  font-size: 26px
  outline: none
  border: none
  border-radius: 5px
  padding-top: 5px
  padding-bottom: 5px
  padding-left: 45px
  color: #C5383A
  font-family: 'Play', sans-serif
  width: 100%
  box-shadow: 1px 3px 6px -4px #000000
  &::placeholder
    color: #C5383A
  +desktop()
    align-self: center
    width: auto

.button
  color: white
  text-shadow: -1px -1px 1px rgba(255,255,255,.1), 1px 1px 1px rgba(0,0,0,.5)
  background-color: #F8CE46
  border-radius: 5px
  font-family: 'Play', sans-serif
  margin-top: 15px
  padding: 4px 8px 4px 8px
  font-size: 20px
  box-shadow: 1px 3px 6px -4px #000000
  border: 1px solid transparent
  transition: all 0.2s
  +desktop()
    font-size: 26px
    margin-left: 10px
    margin-top: 0px
  &:hover
    cursor: pointer
    border: 1px solid white


.switchContainer
  row()
  margin-top: 20px
  align-items: center

.animated
  color: white
  font-family: 'Play', sans-serif
  font-size: 20px
  text-shadow: -1px -1px 1px rgba(255,255,255,0.1), 1px 1px 1px rgba(0,0,0,0.5)
  font-weight: bold

// switch
.switch
  position: relative
  display: inline-block
  width: 46px
  height: 26px
  margin-left: 10px

.switch input
  opacity: 0
  width: 0
  height: 0

.slider
  position: absolute
  cursor: pointer
  top: 0
  left: 0
  right: 0
  bottom: 0
  background-color: #ccc
  -webkit-transition: .4s
  transition: .4s

.slider:before
  position: absolute
  content: ""
  height: 18px
  width: 18px
  left: 4px
  bottom: 4px
  background-color: white
  -webkit-transition: .4s
  transition: .4s

input:checked + .slider
  background-color: #F8CE46

input:checked + .slider:before
  background-color: #416BB7


input:focus + .slider
  box-shadow: 0 0 1px #F8CE46


input:checked + .slider:before
  transform: translateX(20px)


/* Rounded sliders */
.slider.round
  border-radius: 34px


.slider.round:before
  border-radius: 50%

.random
  color: white
  font-family: 'Play', sans-serif
  background-color: #F8CE46
  text-shadow: -1px -1px 1px rgba(255,255,255,0.1), 1px 1px 1px rgba(0,0,0,0.5)
  padding: 3px 5px
  border-radius: 5px
  margin-left: 15px
  border: 1px solid transparent
  transition: all 0.2s
  &:hover
    cursor: pointer
    border: 1px solid white
