.root
  background-color: white
  border-radius: 10px
  padding: 10px 15px 12px 15px
  font-family: 'Play', sans-serif
  color: #C5383A
  position: relative
  margin-bottom: 10px
  box-shadow: 1px 3px 6px -4px #000000
  +desktop()
    width: 20%
    margin-bottom: 20px

.cardBody
  flex: 1

.name
  font-weight: bold
  font-size: 22px
  align-items: center

.image
  width: 120px
  height: 120px
  object-fit: contain
  align-self: center
  margin-top: 10px
  image-rendering: pixelated

.pokemonInfo
  margin-top: 15px
  font-size: 18px

.item
  margin-top: 5px
  &:first-child
    margin-top: 0px

.ability
  padding-left: 12px
  &:first-child
    margin-top: 5px

.types
  row()
  align-items: flex-end
  margin-top: 15px

.type
  color: white
  padding: 5px 10px 5px 10px
  border-radius: 5px
  font-size: 16px
  text-shadow: -1px -1px 1px rgba(255,255,255,.1), 1px 1px 1px rgba(0,0,0,.5)
  box-shadow: 1px 3px 6px -4px #000000
  margin-right: 8px

.id
  position: absolute
  right: 10px
  top: 60%
  // bottom: -3px
  font-size: 74px
  color: black
  opacity: 0.1
