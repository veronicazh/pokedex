.root
  align-items: center
  margin-top: 30px

.pagination
  row()
  flex-wrap: wrap

.page
  margin-right: 6px
  color: white
  background-color: transparent
  border-bottom: 1px solid white
  border-top: 1px solid white
  padding-top: 4px
  padding-bottom: 4px
  // border-radius: 5px
  font-size: 14px
  font-family: 'Play', sans-serif
  width: 24px
  text-align: center
  margin-bottom: 4px
  transition: all 0.2s
  opacity: 0.8
  &:hover
    cursor: pointer
    border-top: 1px solid transparent
    color: #F8CE46
