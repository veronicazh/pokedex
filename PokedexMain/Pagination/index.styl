.root
  align-items: center
  margin-top: 30px

.pagination
  row()
  flex-wrap: wrap

.page
  margin-right: 5px
  color: #C5383A
  // background-color: white
  border: 1px solid transparent
  padding-top: 4px
  padding-bottom: 4px
  border-radius: 3px
  font-size: 14px
  font-family: 'Play', sans-serif
  width: 24px
  text-align: center
  margin-bottom: 4px
  transition: all 0.3s
  opacity: 0.7
  &:hover
    cursor: pointer
    border: 1px solid #F8CE46
    background: transparent

.navigation
  row()
  margin-top: 10px
  align-items: center

.button
  color: #F8CE46
  font-family: 'Play', sans-serif
  border-bottom: 1px solid #F8CE46
  padding-bottom: 1px
  font-size: 12px
  margin-right: 8px
  transition: all 0.2s
  &:hover
    cursor: pointer
    color: white
    border-bottom: 1px solid transparent
    border-bottom: 1px solid white

.text
  font-family: 'Play', sans-serif
  color: white
  font-size: 12px
  margin-left: 5px

.selectBox
  margin-left: 6px
  outline: none
  background-color: #F8CE46
  border: none
  color: #C5383A
  &:hover
    cursor: pointer