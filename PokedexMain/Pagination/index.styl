.root
  align-items: center
  margin-top: 30px

.pagination
  row()
  flex-wrap: wrap

.page
  margin-right: 5px
  color: #C5383A
  background-color: white
  border: 1px solid transparent
  padding-top: 4px
  padding-bottom: 4px
  border-radius: 3px
  font-size: 14px
  font-family: 'Play', sans-serif
  width: 24px
  text-align: center
  margin-bottom: 4px
  transition: all 0.3s
  opacity: 0.7
  &:hover
    cursor: pointer
    border: 1px solid white
    opacity: 1
    color: white
    background: transparent

.navigation
  row()
  margin-top: 10px

.button
  // background-color: #F8CE46
  color: #F8CE46
  font-family: 'Play', sans-serif
  border: 1px solid #F8CE46
  padding: 5px
  border-radius: 5px
  font-size: 12px
  margin-right: 5px
  transition: all 0.2s
  &:hover
    cursor: pointer
    color: white
    border: 1px solid white
